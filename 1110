#include <stdio.h>

int main() {
    int total_cartas;

    while (scanf("%d", &total_cartas) && total_cartas != 0) {
        
       
        int baralho[500]; 
        int topo = 0;
        int base = total_cartas - 1;

       
        for (int i = 0; i < total_cartas; i++) {
            baralho[i] = i + 1;
        }

        printf("Discarded cards:");

        int primeira_impressao = 1;

        
        while (base - topo >= 1) {
            
          
            if (primeira_impressao) {
                printf(" %d", baralho[topo]);
                primeira_impressao = 0;
            } else {
                printf(", %d", baralho[topo]);
            }
            topo++; // Remove do topo

            base++;
            baralho[base] = baralho[topo];
            topo++; // Remove a carta que foi movida do seu lugar original
        }

        
        printf("\nRemaining card: %d\n", baralho[topo]);
    }

    return 0;
}
