#include <stdio.h>
#include <string.h>

void resolver_caso() {
    char entrada[1001];
    scanf("%s", entrada);

    int minerando_esquerda = 0; // Conta quantos '<' abertos temos
    int diamantes_formados = 0;

 
    for (int i = 0; i < strlen(entrada); i++) {
        if (entrada[i] == '<') {
            // Encontramos o início de um diamante
            minerando_esquerda++;
        } 
        else if (entrada[i] == '>') {
            // Encontramos o fim de um diamante. 
            // Só conta se houver um '<' correspondente antes.
            if (minerando_esquerda > 0) {
                diamantes_formados++;
                minerando_esquerda--; // "Consome" o lado esquerdo
            }
        }
        // O caractere '.' (areia) é simplesmente ignorado pelo 'if'
    }

    printf("%d\n", diamantes_formados);
}

int main() {
    int quantidade_testes;
    
    // Lê a quantidade de casos (N)
    if (scanf("%d", &quantidade_testes) != EOF) {
        while (quantidade_testes--) {
            resolver_caso();
        }
    }

    return 0;
}
